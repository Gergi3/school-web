@using BankTransactionsApp.Models.ViewModels
@{
	@model HashSet<IndexPassbookViewModel>
}
<h1>Passbooks</h1>
@if (Model.Count > 0)	
{
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Salary</th>
				<th>Date of birth</th>
				<th>Department</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var passbook in Model)
			{
				<tr>
					<td>@passbook.Id</td>
					<td>@passbook.Name</td>
					<td>@passbook.Email</td>
					<td>@(Math.Round(passbook.Salary, 2)) BGN</td>
					<td>@passbook.DateOfBirth.ToShortDateString()</td>
					<td class="redirect-icons">
						<a href="passbooks/edit/@passbook.Id">
							<i class="fa fa-solid fa-pencil"></i>
						</a>
						<a href="passbooks/delete/@passbook.Id">
							<i class="fa fa-solid fa-trash-can"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h3>No passbooks yet!</h3>
}
<a href="passbooks/create" class="btn btn-primary">
	Add Passbook
</a>
