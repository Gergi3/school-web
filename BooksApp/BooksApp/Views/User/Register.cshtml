@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-10 col-sm-8 col-md-7 col-lg-5 col-xl-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group row justify-content-center mb-3">
                    <label asp-for="Email" class="form-label text-center">Email</label>
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group row justify-content-center mb-3">
                    <label asp-for="Password" class="form-label text-center">Password</label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row justify-content-center mb-3">
                    <label asp-for="RepeatPassword" class="form-label text-center">Confirm Password</label>
                    <input asp-for="RepeatPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="repeat password" />
                    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                </div>
                <div class="row justify-content-center">
                    <button id="login-submit" type="submit" class="col-12 col-sm-4 btn btn-primary mb-2">Register</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
