@using CompanyManagerApp.Models.ViewModels
@{
	@model EditDepartmentViewModel

}
<h1>Edit Department</h1>
<form method="post" asp-action="Edit" class="mt-5">
	<div class="mb-3">
		<label for="Name" class="form-label">Name</label>
		<input type="text" class="form-control" name="Name" asp-for="Name" />
	</div>
	<div class="mb-3">
		<label for="Code" class="form-label">Code</label>
		<input type="text" class="form-control" name="Code" asp-for="Code" />
	</div>
	<div class="mb-3">
		<input type="submit" class="btn btn-primary" value="Edit" />
	</div>
</form>
