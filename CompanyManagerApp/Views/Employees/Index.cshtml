@using CompanyManagerApp.Models.ViewModels
@{
	@model HashSet<IndexEmployeeViewModel>
}
<h1>Employees</h1>
@if (Model.Count > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Salary</th>
				<th>Date of birth</th>
				<th>Department</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model)
			{
				<tr>
					<td>@employee.Id</td>
					<td>@employee.Name</td>
					<td>@employee.Email</td>
					<td>@(Math.Round(employee.Salary, 2)) BGN</td>
					<td>@employee.DateOfBirth.ToShortDateString()</td>
					<td>@employee.DepartmentName</td>
					<td class="redirect-icons">
						<a href="employees/view/@employee.Id">
							<i class="fa fa-regular fa-eye"></i>
						</a>
						<a href="employees/edit/@employee.Id">
							<i class="fa fa-solid fa-pencil"></i>
						</a>
						<a href="employees/delete/@employee.Id">
							<i class="fa fa-solid fa-trash-can"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h3>No employees yet!</h3>
}
<a href="employees/create" class="btn btn-primary">
	Add Employee
</a>
