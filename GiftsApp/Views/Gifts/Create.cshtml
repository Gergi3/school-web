@using GiftsApp.ViewModels
@model GiftSimpleViewModel

@{
	ViewData["Title"] = "Добаву подарък";
}

<h1>@ViewData["Title"]:</h1>
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-3">
                <label asp-for="Name" class="control-label pb-2"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="MinAge" class="control-label pb-2"></label>
                <input asp-for="MinAge" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="MaxAge" class="control-label pb-2"></label>
                <input asp-for="MaxAge" class="form-control" />
                <span asp-validation-for="MaxAge" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="CategoryId" class="control-label"></label>
				<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoriesList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
				<a class="btn btn-info" asp-controller="Categories" asp-action="Create">Добави друга категория</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
