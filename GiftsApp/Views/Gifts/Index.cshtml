@using GiftsApp.ViewModels
@model IEnumerable<GiftViewModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Подаръци:</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedAt)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MinAge)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MaxAge)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CategoryName)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedAt)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MinAge)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MaxAge)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CategoryName)
				</td>
				<td>
                    @if (User.IsInRole("Administrator") || User.IsInRole("SantaClaus"))
                    {
                        <form asp-action="Delete" method="post">
                            <input type="submit" class="btn btn-danger" asp-route-id="@item.Id" value="Изтрий" />
                        </form>
                    }
                </td>
			</tr>
		}
	</tbody>
</table>
