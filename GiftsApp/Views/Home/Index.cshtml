@using GiftsApp.ViewModels
@model GiftNameViewModel
@{
    ViewData["Title"] = "Home Page";
    bool isAdmin = User.IsInRole("Administrator");
}

@section Head
{
	<script src="~/lib/Snowstorm/snowstorm.js"></script>
	<script src="~/js/snowstorm-config.js"></script>
}

<div class="content text-white">
	<marquee class="mt-5 mb-5">
		<h1 class="fst-italic home-title">Коледни подаръци</h1>
	</marquee>
	<div class="d-flex justify-content-center align-items-center">
		<form>
            @if (User.IsInRole("SantaClaus") || isAdmin)
            {
			    <button class="btn btn-primary" asp-controller="Gifts" asp-action="Create">Добави подарък!</button>
            }
			<img src="~/images/presents.gif" />
            @if (User.IsInRole("Child") || isAdmin)
            {
                <a class="btn btn-success" asp-controller="Home" asp-action="Index" asp-route-takeGift="yes">Изтегли подарък!</a>
            } 
		</form>
	</div>
		@if (Model != null)
		{
			<h1 class="w-100 text-center">@Model.Name</h1>
		}
</div>
