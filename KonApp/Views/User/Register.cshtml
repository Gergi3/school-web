@using KonApp.ViewModels
@model RegisterViewModel

<div class="row justify-content-center">
	<div class="col-md-6 ">
		<h1 class="text-center mb-5">Register</h1>
		<form asp-action="Register" class="row justify-content-center">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mb-3 col-md-6 justify-content-center">
				<input asp-for="FirstName" class="form-control" placeholder="First Name"/>
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group mb-3 col-md-6">
				<input asp-for="LastName" class="form-control" placeholder="Last Name" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<input asp-for="Email" class="form-control" placeholder="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<input asp-for="Password" class="form-control" placeholder="Password"/>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group mb-3 mb-2">
				<input asp-for="PasswordRepeat" class="form-control" placeholder="Repeat Password"/>
				<span asp-validation-for="PasswordRepeat" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Sign up" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
