@using ProductApp.Models.ViewModels
@{
	@model HashSet<IndexProductViewModel>

}
<h1>Products</h1>
<table class="table table-striped table-active">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Category</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Code</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count > 0)
		{
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Id</td>
					<td>@product.Name</td>
					<td>@product.Category</td>
					<td>@(Math.Round(product.Price, 2)) BGN</td>
					<td>@product.Quantity</td>
					<td>@product.Code</td>
					<td class="redirect-icons">
						<a href="products/edit/@product.Id">
							<i class="fa fa-solid fa-pencil"></i>
						</a>
						<a href="products/delete/@product.Id">
							<i class="fa fa-solid fa-trash-can"></i>
						</a>
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td>There are currently no products available!</td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		}
	</tbody>
</table>
<a href="products/create" class="btn btn-primary">
	Add Product
</a>
