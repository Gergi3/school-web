@using ProductApp.Models.ViewModels
@{
	@model HashSet<IndexProductViewModel>
}
<h1>Products</h1>
@if (Model.Count > 0)	
{
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Salary</th>
				<th>Date of birth</th>
				<th>Department</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Id</td>
					<td>@product.Name</td>
					<td>@product.Email</td>
					<td>@(Math.Round(product.Salary, 2)) BGN</td>
					<td>@product.DateOfBirth.ToShortDateString()</td>
					<td class="redirect-icons">
						<a href="products/edit/@product.Id">
							<i class="fa fa-solid fa-pencil"></i>
						</a>
						<a href="products/delete/@product.Id">
							<i class="fa fa-solid fa-trash-can"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h3>No products yet!</h3>
}
<a href="products/create" class="btn btn-primary">
	Add Product
</a>
